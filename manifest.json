{
  "manifest_version": 3,
  "name": "ClarityTap",
  "version": "1.0",
  "description": "A lightweight extension for notes, tasks, and reminders with a glassmorphism design.",
  "permissions": ["storage", "alarms", "notifications", "offscreen", "declarativeNetRequest", "declarativeNetRequestWithHostAccess"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}